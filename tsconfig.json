{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist",
        "watch": true,
        "jsx": "react",
        "target": "es5",
        "preserveWatchOutput": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*", "tests/**/*"]
}
